#!/usr/bin/sh
# This is a small script to extract specific arcives.
#
# USAGE: <SCRIPT> <FILE>
# DEPENDENCIES: 'tar', 'gzip', 'unrar', 'unzip', 'p7zip', 'coreutils'

if [ -f "$1" ] ; then
	case "$1" in
		*.tar.bz2)  tar xjf    "$1"  ;;
		*.tar.gz)   tar xzf    "$1"  ;;
		*.tar)      tar xf     "$1"  ;;
		*.tbz2)     tar xjf    "$1"  ;;
		*.tgz)      tar xzf    "$1"  ;;
		*.bz2)      tar xjf    "$1"  ;;
		*.rar)      unrar x    "$1"  ;;
		*.gz)       gunzip     "$1"  ;;
		*.zip)      unzip      "$1"  ;;
		*.Z)        uncompress "$1"  ;;
		*.7z)       7z x       "$1"  ;;
		*)          printf '\''%s'\'' cannot be extracted via %s' "$1" "$0" >2 ;;
	esac
else
	printf '\''%s'\'' is not a file' "$1" >2 ;;
fi
